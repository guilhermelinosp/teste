@page "/forgot-password"
@inject NavigationManager Navigation

<PageTitle>Forgot Password</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
        <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Forgot Password</h2>
        <EditForm EditContext="_editContext" OnValidSubmit="HandleSubmitAsync" FormName="forgotForm" class="space-y-4">
            <DataAnnotationsValidator/>
            
            <!-- Email Field -->
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <InputText
                    id="email"
                    @bind-Value="_forgotForm.Email"
                    class="form-control mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                />
                <ValidationMessage For="@(() => _forgotForm.Email)" class="text-sm text-red-500" />
            </div>
            
            <!-- Submit Button -->
            <div>
                <button
                    type="submit"
                    class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                >
                    Submit
                </button>
            </div>
        </EditForm>
    </div>
</div>