@page "/reset-password"
@inject NavigationManager Navigation

<PageTitle>Reset Password</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
        <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Reset Password</h2>
        <EditForm EditContext="_editContext" OnValidSubmit="HandleSubmitAsync" FormName="resetForm" class="space-y-4">
            <DataAnnotationsValidator/>

            <!-- Password Field -->
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                <InputText
                    id="password"
                    type="password"
                    @bind-Value="_resetForm.Password"
                    class="form-control mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                />
                <ValidationMessage For="@(() => _resetForm.Password)" class="text-sm text-red-500" />
            </div>

            <!-- Confirm Password Field -->
            <div>
                <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <InputText
                    id="confirmPassword"
                    type="password"
                    @bind-Value="_resetForm.ConfirmPassword"
                    class="form-control mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                />
                <ValidationMessage For="@(() => _resetForm.ConfirmPassword)" class="text-sm text-red-500" />
            </div>
            
            <!-- Submit Button -->
            <div>
                <button
                    type="submit"
                    class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                >
                    Submit
                </button>
            </div>
        </EditForm>
    </div>
</div>
