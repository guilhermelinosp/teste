@page "/signup"
@inject NavigationManager Navigation

<PageTitle>Sign Up</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
        <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Sign Up</h2>
        <EditForm EditContext="_editContext" OnValidSubmit="HandleSubmitAsync" FormName="signInForm" class="space-y-4">
            <DataAnnotationsValidator/>

            <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
                <InputText
                    id="name"
                    @bind-Value="_signUpForm.Name"
                    class="form-control mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                />
                <ValidationMessage For="@(() => _signUpForm.Name)" class="text-sm text-red-500" />
            </div>

            <!-- Email Field -->
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <InputText
                    id="email"
                    @bind-Value="_signUpForm.Email"
                    class="form-control mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                />
                <ValidationMessage For="@(() => _signUpForm.Email)" class="text-sm text-red-500" />
            </div>

            <!-- Password Field -->
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                <InputText
                    id="password"
                    type="password"
                    @bind-Value="_signUpForm.Password"
                    class="form-control mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                />
                <ValidationMessage For="@(() => _signUpForm.Password)" class="text-sm text-red-500" />
            </div>

            <!-- Confirm Password Field -->
            <div>
                <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <InputText
                    id="confirmPassword"
                    type="password"
                    @bind-Value="_signUpForm.ConfirmPassword"
                    class="form-control mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                />
                <ValidationMessage For="@(() => _signUpForm.ConfirmPassword)" class="text-sm text-red-500" />
            </div>

            <!-- Terms & Conditions -->
            <div class="flex items-center">
                <InputCheckbox
                    @bind-Value="_signUpForm.AgreeToTerms"
                    class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"   
                />
                <label class="ml-2 block text-sm text-gray-900">I agree to the <a href="#" class="text-indigo-600 hover:underline">Terms and Conditions</a></label>
                <ValidationMessage For="@(() => _signUpForm.AgreeToTerms)" class="text-sm text-red-500" />
            </div>

            <!-- Submit Button -->
            <div>
                <button
                    type="submit"
                    class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                >
                    Sign Up
                </button>
            </div>
        </EditForm>
        <p class="text-sm text-center text-gray-600 mt-4">
            Already have an account? <a href="/" class="text-indigo-600 hover:underline">Sign In</a>
        </p>
    </div>
</div>

