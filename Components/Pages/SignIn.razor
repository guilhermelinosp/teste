@page "/"
@inject NavigationManager Navigation

<PageTitle>Sign In</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
        <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Sign In</h2>
        <EditForm  EditContext="_editContext" OnValidSubmit="HandleSubmitAsync" FormName="signInForm" class="space-y-4">
            <DataAnnotationsValidator />

            <!-- Email Field -->
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <InputText
                    class="form-control mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                    id="email"
                    @bind-Value="_signInForm.Email"
                    aria-describedby="emailHelp"
                    autocomplete="email"/>
                <ValidationMessage For="@(() => _signInForm.Email)" class="text-sm text-red-500"/>
            </div>

            <!-- Password Field -->
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                <InputText
                    class="form-control mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                    id="password"
                    type="password"
                    @bind-Value="_signInForm.Password"
                    aria-describedby="passwordHelp"/>
                <ValidationMessage For="@(() => _signInForm.Password)" class="text-sm text-red-500"/>
            </div>

            <!-- Remember Me -->
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <InputCheckbox
                        class="form-control h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                        id="rememberme"
                        @bind-Value="_signInForm.RememberMe"/>
                    <label for="rememberme" class="ml-2 block text-sm text-gray-900">Remember me</label>
                </div>
                <div>
                    <a href="/forgot-password" class="text-sm text-indigo-600 hover:underline">Forgot your password?</a>
                </div>
            </div>

            <!-- Submit Button -->
            <div>
                <button class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 flex items-center justify-center" type="submit">
                    Sign In
                </button>
            </div>
        </EditForm>
        <p class="text-sm text-center text-gray-600 mt-4">
            Don't have an account? <a href="/signup" class="text-indigo-600 hover:underline">Sign Up</a>
        </p>
    </div>
</div>
